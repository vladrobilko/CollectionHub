@model CollectionHub.Models.CollectionViewModel
@{
    ViewData["Title"] = "Create collection";
}

<div class="row justify-content-center mb-3">
    <div class="col-7">
        <h2>CREATE COLLECTION</h2>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-sm-6 col-md-3">
        <!--Image-->
        <form id="uploadForm" action="@Url.Action("UploadImage", "YourController")" method="post" enctype="multipart/form-data">
            <!-- Your existing image -->
            <img src="~/AddImage.png" alt="Add image" style="cursor: pointer; width: 100%; height: 100%; object-fit: cover;" onclick="triggerFileInput();" />

            <!-- Hidden file input -->
            <input type="file" id="fileInput" name="imageFile" style="display: none;" onchange="submitForm();" />

            <!-- Submit button (hidden) -->
            <button type="submit" id="submitButton" style="display: none;"></button>
        </form>
    </div>
    <div class="col-12 col-sm-6 col-md-4">
        <form method="post" asp-action="CreateCollection">
            <div class="form-group mb-3">
                <label asp-for="Theme">Theme:</label>
                <input asp-for="Theme" class="form-control" />
                <span asp-validation-for="Theme" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name">Name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description">Description:</label>
                <textarea asp-for="Description" class="form-control" rows="4" cols="30"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
        </form>
    </div>
</div>


<script>
    function triggerFileInput() {
        document.getElementById('fileInput').click();
    }

    function submitForm() {
        document.getElementById('submitButton').click();
    }
</script>