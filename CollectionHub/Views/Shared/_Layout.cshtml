@{
    string theme = Context.Request.Cookies["ThemePreference"] ?? "Light";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CollectionHub</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CollectionHub.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">

</head>
<body class="@theme">
    <header class="mb-3 container-lg mx-auto">
        @if (IsSectionDefined("HeaderInfo"))
        {
            @RenderSection("HeaderInfo", required: false)
        }
        else
        {
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/"><b class="text-black">COLLECTION<span class="text-primary">HUB</span></b></a>

                    <div class="d-flex justify-content-end align-items-center flex-grow-1">
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="@Localizer["search"]" aria-label="Search">
                            <button class="btn btn-outline-primary" type="submit">@Localizer["search"]</button>
                        </form>
                    </div>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="true" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                        <ul class="navbar-nav ms-0 ms-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-circle-half-stroke"></i>
                                    @Localizer[@theme]
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="@Url.Action("ChangeTheme", "Home", new { theme = "Light" })">@Localizer["Light"]</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("ChangeTheme", "Home", new { theme = "Dark" })">@Localizer["Dark"]</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-globe"></i>
                                    @Localizer["language"]
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="@Url.Action("ChangeLanguage", "Home", new { culture = "en" })">English</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("ChangeLanguage", "Home", new { culture = "ka" })">ართული</a></li>
                                </ul>
                            </li>
                        </ul>
                        @if (@User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Account" asp-action="Logout" class="btn btn-danger ml-2">@Localizer["logout"]</a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </nav>
        }       
    </header>
    <div class="container-lg">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>